<ivysettings>
    <settings defaultResolver="chain-example"/>
    <resolvers>
        <chain name="chain-example">
            <url name="a" m2compatible="true">
                <artifact
                        pattern="http://repo1.maven.org/maven2/[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"/>
            </url>
            <url name="b" m2compatible="true">
                <artifact
                        pattern="https://dl.bintray.com/sasol-oss/maven/[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"/>
            </url>
        </chain>
    </resolvers>
</ivysettings>